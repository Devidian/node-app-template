{
	"name": "node_app_template",
	"version": "0.1.0",
	"description": "Template for node (backend) node apps",
	"main": "dist/app.js",
	"repository": "git@github.com:Devidian/node-app-template.git",
	"author": "devidian@devidian.de",
	"license": "MIT",
	"engines": {
		"node": "14.x"
	},
	"scripts": {
		"build": "rm -rf dist && tsc -p tsconfig.build.json",
		"gcp-build": "npm run build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "npm run start:prod",
		"dev": "nodemon",
		"start:dev": "ts-node -r tsconfig-paths/register --files src/app.ts",
		"start:dev-watch": "ts-node-dev -r tsconfig-paths/register --files src/app.ts",
		"start:prod": "node -r module-alias/register dist/app",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.4.4",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"connect-mongo": "^4.4.1",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2",
		"mongodb": "^3.6.6",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"passport-steam": "^1.0.15",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^6.6.7",
		"sendgrid": "^5.2.3",
		"socket.io": "^4.0.2",
		"socket.io-client": "^4.0.2",
		"swagger-jsdoc": "^6.1.0",
		"swagger-ui-express": "^4.1.6"
	},
	"devDependencies": {
		"@tsconfig/node14": "^1.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.11",
		"@types/express-session": "^1.17.3",
		"@types/mongodb": "^3.6.3",
		"@types/mongoose": "^5.10.3",
		"@types/node": "^14.14.20",
		"@types/passport": "^1.0.5",
		"@types/passport-jwt": "^3.0.5",
		"@types/passport-local": "^1.0.33",
		"@types/passport-steam": "^1.0.1",
		"@types/swagger-jsdoc": "^6.0.0",
		"@types/swagger-ui-express": "^4.1.2",
		"jest": "^26.6.3",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.6",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.4"
	},
	"_moduleAliases": {
		"@": "dist"
	}
}
